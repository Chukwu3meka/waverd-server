{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@middleware/*": ["./middleware/*"],
      "@interface/*": ["./interface/*"],
      "@templates/*": ["./templates/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["*.ts", "**/*.ts"], // Include all .ts files in root and subdirectories
  "exclude": ["node_modules", "dist"]
}
