{
  "name": "waverd-server",
  "version": "1.0.0",
  "description": "WaveRD server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "tsc": "tsc --watch",
    "start": "node ./dist/index.js",
    "gateway-dev": "node ../gateway/index.js",
    "gateway": "pm2 start ../gateway/index.js -i 1 -f",
    "gateway-fail-safe": "pm2 start ../gateway/index.js -i -1",
    "pm2-start": "pm2 start process.json --name waverd_server",
    "kill-server": "pm2 kill && pm2 stop all && npx kill-port 8081",
    "dev": "pm2 kill && pm2 stop all && npx kill-port 8081 && pm2 start tsc.sh &&  pm2 monit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chukwu3meka/WaveRD-Server.git"
  },
  "keywords": [
    "soccer",
    "football",
    "manager",
    "api"
  ],
  "author": "WaveRD",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Chukwu3meka/WaveRD-Server/issues"
  },
  "homepage": "https://github.com/Chukwu3meka/WaveRD-Server#readme",
